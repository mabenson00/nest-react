{
  "name": "nest-react",
  "version": "1.0.0",
  "author": "Paul Land√°zuri",
  "description": "Simple boilerplate for a Nest + React project",
  "homepage": "https://github.com/LandazuriPaul/nest-react#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LandazuriPaul/nest-react.git"
  },
  "bugs": {
    "url": "https://github.com/LandazuriPaul/nest-react/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "references": [
    {
      "path": "packages/domain"
    },
    {
      "path": "packages/lib"
    }
  ],
  "scripts": {
    "generate:version": "./scripts/generate_version.sh",
    "start:domain": "npm -w @nest-react/domain run start:dev",
    "start:lib": "npm -w @nest-react/lib run start:dev",
    "start:common": "(npm run start:domain & npm run start:lib)",
    "build:domain": "npm -w @nest-react/domain run build",
    "build:lib": "npm -w @nest-react/lib run build",
    "build:common": "npm run build:domain && npm run build:lib",
    "build-push:server": "PACKAGE=server ./scripts/build_and_push.sh",
    "build-push:client": "PACKAGE=client ./scripts/build_and_push.sh",
    "lint": "npm -ws run lint"
  }
}
